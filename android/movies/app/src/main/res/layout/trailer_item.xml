<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/trailer_item"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:paddingTop="@dimen/grid_view_spacing"
			  android:paddingBottom="@dimen/grid_view_spacing">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:layout_width="@dimen/play_button_size"
			android:layout_height="@dimen/play_button_size"
			android:src="@drawable/green_play_button_2"
			android:layout_gravity="center_vertical"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:id="@+id/trailer_item_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginTop="@dimen/default_margin"/>
			<View
				android:layout_width="wrap_content"
				android:layout_height="@dimen/line_height"
				android:layout_gravity="bottom"
				android:layout_marginTop="@dimen/grid_view_spacing"
				android:background="@color/gray"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
